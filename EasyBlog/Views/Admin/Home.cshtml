@model EasyBlog.Models.UserInformationModel

@{
    ViewBag.Title = "Admin";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Easy Blog</title>
    <link href="~/Content/Site.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.4.1.js"></script>

</head>
<body>
    <div class="container active-page">
        <div class="form-group">
            <div class="mb-5">
                <h2 class="text-center text-uppercase" id="title">Easy Blog</h2>
            </div>
            <div class="setting-form">
                <div class="text-center">
                    <h3>Welcome</h3>
                </div>
                <div class="row input-padding">
                    <div class="col-lg-12" style="padding-bottom: 15px; text-align:left">
                        @{<p>
                                Welcome back! Your last login date is <b>@Model.lastLoginDate.ToString("MM/dd/yyyy")</b>
                                and last modified date is <b>@Model.modifiedDate.ToString("MM/dd/yyyy")</b>.
                            </p>
                        }
                    </div>
                </div>
            </div>
            <div class="setting-form">
                <div class="text-center">
                    <h3>What is Easy Blog?</h3>
                </div>
                <div class="row input-padding">
                    <div class="col-lg-12" style="padding-bottom: 15px; text-align:left">
                        <p>
                            Easy Blog basically helps you to pick a Bootstrap template and modify it without dealing with any coding and it allows you to manage your blog easily.
                        </p>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <script src="~/Scripts/main1.js"></script>
</body>
</html>
