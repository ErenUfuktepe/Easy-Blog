    <link href="~/Content/Folio/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Folio/ionicons.min.css" rel="stylesheet" />

    <!-- Template Main CSS File -->
    <link href="~/Content/Folio/style.css" rel="stylesheet" />

