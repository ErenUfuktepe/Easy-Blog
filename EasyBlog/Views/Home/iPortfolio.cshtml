@model EasyBlog.Models.PageModel
@{
    ViewBag.Title = Model.mainComponents.title;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

